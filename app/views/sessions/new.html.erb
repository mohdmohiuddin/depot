<div class="depot">
	<% if flash[:alert] %>
	<p id="notice"> <%= flash[:alert] %></p>
	<% end %>

	<%= form_tag do %>
	<fieldset>
		<legend>Please Log In</legend>
		<div>
			<%= label_tag :name, 'Name:' %><br>
			<%= text_field :name, params[:name]%>
		</div>

		<div>
            <%= label_tag :password, 'Password' %><br>
            <%= password_field :password, params[:password] %><br>
            </div>

            <div>
              <%= submit_tag "Login" %><br>
          </div>
		</fieldset>
		<% end %>
	</div>